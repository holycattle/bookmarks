html(ng-app="Momentum")
  head
    title Sample Cafe

    // import the bootstrap stylesheets
    link(href='lib/bootstrap/css/bootstrap.css', rel='stylesheet')
    link(href='lib/angular-ui/angular-ui.css', rel='stylesheet')
    // import the css styles we created in the css/ folder
    link(href='css/styles.css', rel='stylesheet')

  body
    .navbar.navbar-fixed-top(ng-controller="NavController")
      .navbar-inner
        //buttons to navigate the main page
        a.brand(ng-click="scrollToHash('first-row')") Sample Cafe
        ul.nav(role="navigation")
          li
            a(ng-click="scrollToHash('second-row')") Menu
          li
            a(ng-click="scrollToHash('third-row')") Contact us!
        //cookbook dropdown nav
        ul.nav.pull-right
          li.dropdown
            a(href="#", id="drop2", role="button", data-toggle="dropdown", style="padding-right: 25px").dropdown-toggle.cookbook-button Cookbook
              b.caret
            ul.dropdown-menu(role="menu", aria-labelledby="drop2")
              li(role="presentation")
                a(href="#/recipes", tabindex="-1", role="menuitem") Recipes
              li(role="presentation")
                a(href="#/lessons", tabindex="-1", role="menuitem") Lessons
    //add padding in between nav-bar and main body
    .main-body
      div(ng-view)


  // import the jquery, bootstrap, and Angular JS libraries
  script(src='lib/jquery-1.9.1.js', type='text/javascript') 

  script(src='lib/bootstrap/js/bootstrap.js', type='text/javascript')
  script(src='lib/angular-1.1.5/angular.js', type='text/javascript')
  script(src='lib/angular-ui/angular-ui.js', type='text/javascript')
  script(src="http://angular-ui.github.com/bootstrap/ui-bootstrap-tpls-0.2.0.js", type='text/javascript')
  script(src='lib/jquery_scroll.js', type='text/javascript')
  // import the javascript code in the js/ folder
  script(src='js/controllers.js', type='text/javascript')
  script(src='js/directives.js', type='text/javascript')
  script(src='js/app.js', type='text/javascript')